<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:stretchColumns="1"
        android:background="#81B285"
        >
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/action_addalert"
                android:paddingLeft="4dp"
                android:paddingRight="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_add_alert"
                android:background="@android:color/transparent"
                android:onClick="addAlert"/>

            <TextView
                android:text="TakePills"
                android:textSize="28dp"
                android:textColor="#fff"
                android:textScaleX="1.1"
                android:fontFamily="sans-serif-light"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/companyName"
                android:gravity="center_vertical|center_horizontal" />

            <ImageButton
                android:id="@+id/action_settings"
                android:paddingLeft="3dp"
                android:paddingRight="4dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_settings"
                android:onClick="settingsMenu"/>
        </TableRow>

    </TableLayout>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:columnCount="24"
        android:orientation="horizontal"
        android:rowCount="8" >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Current:"
            android:id="@+id/current"
            android:layout_row="1"
            android:layout_column="1"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:paddingRight="8dp"
            android:paddingBottom="5dp" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/currentImage"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="#ff49ffd1"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Med Name"
            android:id="@+id/currentName"
            android:layout_row="2"
            android:layout_column="2"
            android:paddingTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Dose"
            android:id="@+id/currentDose"
            android:layout_row="2"
            android:layout_column="23"
            android:paddingRight="20dp" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/currentImage2"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="#ff49ffd1"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Med Name"
            android:id="@+id/currentName2"
            android:layout_row="3"
            android:layout_column="2"
            android:paddingTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Dose"
            android:id="@+id/currentDose2"
            android:layout_row="3"
            android:layout_column="23"
            android:paddingRight="20dp" />

    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:columnCount="24"
        android:orientation="horizontal"
        android:rowCount="8" >

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/nextImage"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="#ff49ffd1"
            android:layout_marginRight="10dp" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/nextImage2"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="#ff49ffd1"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Next:"
            android:id="@+id/next"
            android:layout_row="1"
            android:layout_column="1"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:paddingRight="8dp"
            android:paddingBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Med Name"
            android:id="@+id/nextName"
            android:layout_row="2"
            android:layout_column="2"
            android:paddingTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Dose"
            android:id="@+id/nextDose"
            android:layout_row="2"
            android:layout_column="23"
            android:paddingRight="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Med Name"
            android:id="@+id/nextName2"
            android:layout_row="3"
            android:layout_column="2"
            android:paddingTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Dose"
            android:id="@+id/nextDose2"
            android:layout_row="3"
            android:layout_column="23"
            android:paddingRight="20dp" />
    </GridLayout>


</LinearLayout>